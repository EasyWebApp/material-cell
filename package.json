{
    "name": "material-cell",
    "version": "2.0.0-alpha.6",
    "description": "Material Design Web Components library based on WebCell",
    "keywords": [
        "material",
        "design",
        "web",
        "component",
        "web-cell"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://web-cell.dev/material-cell/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/material-cell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/material-cell/issues"
    },
    "module": "source/index.ts",
    "dependencies": {
        "boot-cell": "^1.5.1",
        "classnames": "^2.2.6",
        "web-cell": "^2.2.0",
        "web-utility": "^2.0.0"
    },
    "peerDependencies": {
        "bootstrap-icons": "^1.1.0",
        "daemonite-material": "^4.1.1",
        "material-design-icons": "^3.0.1"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.11",
        "@typescript-eslint/parser": "^4.9.0",
        "eslint": "^7.15.0",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "open-cli": "^6.0.1",
        "prettier": "^2.2.1",
        "snabbdom": "^1.0.1",
        "typedoc": "^0.19.2",
        "typescript": "^4.1.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,css,md,mdx,json}": "prettier --write",
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "test": "lint-staged",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "npm run pack-docs",
        "help": "npm run build  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
