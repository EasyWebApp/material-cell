{
    "name": "material-cell",
    "version": "1.0.0-alpha",
    "description": "Material-design Web component library based on WebCell",
    "keywords": [
        "material",
        "design",
        "web",
        "component",
        "web-cell"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://web-cell-ht.ml/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/material-cell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/material-cell/issues"
    },
    "module": "dist/index.js",
    "directories": {
        "lib": "source/",
        "test": "test/"
    },
    "scripts": {
        "format": "prettier --write \"{,!(node_modules|.git|dist|docs)/**/}*.{html,md,css,less,js,json,yml,yaml}\"",
        "lint": "eslint source/ test/ --fix",
        "build": "npm run format  &&  npm run lint  &&  web-cell pack",
        "dev": "web-cell preview",
        "test": "npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test  &&  git add ."
        }
    },
    "dependencies": {
        "material-design-icons": "^3.0.1",
        "material-design-lite": "^1.3.0",
        "dom-renderer": "^0.9.0",
        "web-cell": "^1.1.0"
    },
    "peerDependencies": {
        "resize-observer-polyfill": "^1.5.1"
    },
    "devDependencies": {
        "@babel/plugin-proposal-decorators": "^7.4.4",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.4.4",
        "@webcomponents/webcomponentsjs": "^2.2.10",
        "babel-eslint": "^10.0.1",
        "eslint": "^5.16.0",
        "husky": "^2.2.0",
        "prettier": "^1.17.0",
        "resize-observer-polyfill": "^1.5.1",
        "web-cell-cli": "^1.0.0-beta"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "targets": {
                        "ie": 11
                    }
                }
            ]
        ],
        "plugins": [
            [
                "@babel/plugin-proposal-decorators",
                {
                    "decoratorsBeforeExport": true
                }
            ]
        ]
    }
}
