{
    "name": "material-cell",
    "version": "2.0.0-rc.0",
    "description": "Material Design Web Components library based on WebCell",
    "keywords": [
        "material",
        "design",
        "web",
        "component",
        "web-cell"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://material.web-cell.dev/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/material-cell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/material-cell/issues"
    },
    "source": "source/index.ts",
    "types": "dist/index.d.ts",
    "main": "dist/index.umd.js",
    "module": "dist/index.js",
    "dependencies": {
        "boot-cell": "^1.9.1",
        "classnames": "^2.2.6",
        "iterable-observer": "^1.0.0-beta.5",
        "web-cell": "^2.3.0-beta.4",
        "web-utility": "^2.2.2"
    },
    "peerDependencies": {
        "daemonite-material": "^4.1.1",
        "material-design-icons": "^3.0.1"
    },
    "devDependencies": {
        "@peculiar/webcrypto": "^1.1.4",
        "@tech_query/snabbdom-looks-like": "^2.0.1",
        "@types/classnames": "^2.2.11",
        "@types/resize-observer-browser": "^0.1.4",
        "@typescript-eslint/parser": "^4.11.1",
        "cross-env": "^7.0.3",
        "element-internals-polyfill": "^0.1.1",
        "eslint": "^7.16.0",
        "husky": "^4.3.6",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.6.3",
        "less": "^4.0.0",
        "lint-staged": "^10.5.3",
        "microbundle": "^0.13.0",
        "open-cli": "^6.0.1",
        "prettier": "^2.2.1",
        "snabbdom": "^2.1.0",
        "ts-jest": "^26.4.4",
        "typedoc": "^0.20.2",
        "typescript": "^4.1.3"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{css,md,json,yml}": "prettier --write",
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "test": "lint-staged  &&  jest",
        "pack-dist": "rm -rf dist/  &&  cross-env NODE_ENV=build  microbundle --external web-cell,web-utility,classnames,iterable-observer,boot-cell --globals web-cell=WebCell,web-utility=WebUtility,classnames=classNames,iterable-observer=IterableObserver,boot-cell=BootCell --name MaterialCell --css-modules true",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "build": "npm run pack-dist  &&  npm run pack-docs",
        "start": "npm run build  &&  open-cli docs/index.html",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
