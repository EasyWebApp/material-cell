{
    "name": "material-cell",
    "version": "2.0.0-alpha.5",
    "description": "Material Design Web Components library based on WebCell",
    "keywords": [
        "material",
        "design",
        "web",
        "component",
        "web-cell"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://web-cell.dev/material-cell/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/EasyWebApp/material-cell.git"
    },
    "bugs": {
        "url": "https://github.com/EasyWebApp/material-cell/issues"
    },
    "module": "source/index.ts",
    "dependencies": {
        "boot-cell": "^1.0.1",
        "classnames": "^2.2.6",
        "web-cell": "^2.2.0",
        "web-utility": "^1.8.0"
    },
    "peerDependencies": {
        "bootstrap-icons": "^1.0.0",
        "daemonite-material": "^4.1.1",
        "material-design-icons": "^3.0.1"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.10",
        "@typescript-eslint/parser": "^3.10.1",
        "autoprefixer": "^9.8.6",
        "bootstrap-icons": "^1.0.0",
        "cell-router": "^2.0.0-rc.8",
        "eslint": "^7.7.0",
        "husky": "^4.2.5",
        "lint-staged": "^10.2.13",
        "mark-cell": "^0.4.4",
        "mobx": "^5.15.6",
        "mobx-web-cell": "^0.3.1",
        "open-cli": "^6.0.1",
        "parcel-bundler": "^1.12.4",
        "prettier": "^2.1.1",
        "snabbdom": "^1.0.1",
        "typedoc": "^0.19.0",
        "typescript": "^4.0.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{html,css,md,mdx,json}": [
            "prettier --write"
        ],
        "*.{ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "scripts": {
        "lint": "lint-staged",
        "test": "npm run lint",
        "pack-docs": "rm -rf docs/  &&  typedoc source/",
        "pack-mdx": "rm -rf document/dist/  &&  mark-cell document/source -p web-cell -f createCell",
        "pack-demo": "parcel build test/index.html -d docs/demo/ --public-url .",
        "build": "npm run pack-docs  &&  npm run pack-mdx  &&  npm run pack-demo",
        "help": "npm run build  &&  open-cli docs/index.html",
        "start": "npm run pack-mdx  &&  parcel test/index.html -d docs/demo/ --open",
        "prepublishOnly": "npm test  &&  npm run build"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm test",
            "pre-push": "npm run build"
        }
    }
}
